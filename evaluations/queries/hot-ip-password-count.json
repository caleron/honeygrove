{
  "query": {
    "bool": {
      "must": [
        {
          "match": {
            "event_type": "login"
          }
        },
        {
          "match": {
            "service": "SSH"
          }
        },
        {
          "range": {
            "@timestamp": {
              "gte": "2019-04-15T00:00:00.000000",
              "lte": "2019-06-20T00:00:00.000000"
            }
          }
        }
      ]
    }
  },
  "aggs": {
    "hot_ips": {
      "terms": {
        "field": "ip",
        "size": 100,
        "show_term_doc_count_error": true
      },
      "aggs": {
        "user_password_count": {
          "cardinality": {
            "script": "doc['user'].value + ' ' + doc['key'].value"
          }
        }
      }
    }
  },
  "size": 0
}